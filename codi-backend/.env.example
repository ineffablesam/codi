# =================================================================
# Codi Backend - Environment Configuration
# =================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------
APP_ENV=development
DEBUG=True
SECRET_KEY=change-me-in-production
API_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------
# Database
# -----------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://codi:codi_password@localhost:5432/codi_db

# -----------------------------------------------------------------
# Redis (Sessions, Pub/Sub, Caching)
# -----------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------
# GitHub OAuth App (for user authentication)
# Create at: https://github.com/settings/developers
# -----------------------------------------------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# -----------------------------------------------------------------
# GitHub App (for repository management)
# Create at: https://github.com/settings/apps
# -----------------------------------------------------------------
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY_PATH=/path/to/private-key.pem

# -----------------------------------------------------------------
# Vercel OAuth (for deployment)
# Create at: https://vercel.com/account/tokens
# -----------------------------------------------------------------
VERCEL_CLIENT_ID=your_vercel_client_id
VERCEL_CLIENT_SECRET=your_vercel_client_secret
VERCEL_REDIRECT_URI=http://localhost:8000/api/v1/backend/callback/vercel

# =================================================================
# AI MODEL CONFIGURATION
# =================================================================

# -----------------------------------------------------------------
# Google Gemini 3 (Primary AI Engine)
# Get API key: https://aistudio.google.com/app/apikey
# -----------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key

# Default model for general tasks
GEMINI_MODEL=gemini-3-flash-preview

# When true, all agents use Gemini 3 (recommended for development)
# When false, agents use their preferred models (requires all API keys)
FORCE_GEMINI_OVERALL=true

# Gemini 3 model variants:
# - gemini-3-pro-preview   : Advanced reasoning (Conductor, Sage)
# - gemini-3-flash-preview : Fast execution (Scout, Artisan, etc.)
GEMINI_THINKING_MODEL=gemini-3-pro-preview
GEMINI_FAST_MODEL=gemini-3-flash-preview

# -----------------------------------------------------------------
# Multi-Model Support (Optional - when FORCE_GEMINI_OVERALL=false)
# -----------------------------------------------------------------
# OpenAI API Key (for Sage agent with gpt-5.2)
# OPENAI_API_KEY=your_openai_api_key

# Anthropic API Key (for Conductor/Scholar with claude-opus-4-5)
# ANTHROPIC_API_KEY=your_anthropic_api_key

# =================================================================
# INFRASTRUCTURE
# =================================================================

# -----------------------------------------------------------------
# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# -----------------------------------------------------------------
ENCRYPTION_KEY=your_fernet_key_here

# -----------------------------------------------------------------
# Celery (Background Task Queue)
# -----------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------
# CORS (Allowed Origins)
# -----------------------------------------------------------------
# CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
